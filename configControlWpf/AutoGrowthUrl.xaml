<UserControl x:Class="configControlWpf.AutoGrowthUrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:configControlWpf"
             xmlns:p="clr-namespace:configControlWpf.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="395">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="lbAutoGrowthPar" TextWrapping="Wrap"
                   Text="{x:Static p:Resource.tbAutoGrowthPar}"/>
        <TextBox x:Name="txtAutoGrowthPar" Grid.ColumnSpan="2" TextWrapping="Wrap" Grid.Column="1" Margin="4,0,0,0"/>
        <TextBlock x:Name="lbCheckExist" TextWrapping="Wrap"
                   Text="{x:Static p:Resource.tbCheckExist}" Grid.Row="1"/>
        <TextBox x:Name="txtCheckExist" Grid.ColumnSpan="2" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" Margin="4,0,0,0"/>
    </Grid>
</UserControl>
