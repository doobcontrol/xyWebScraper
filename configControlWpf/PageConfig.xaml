<UserControl x:Class="configControlWpf.PageConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:configControlWpf"
             mc:Ignorable="d" 
             d:DesignHeight="310" d:DesignWidth="610">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Page Model ID" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Coding" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPageID" TextWrapping="Wrap" Text="TextBox" Grid.Column="1" Margin="4,0,0,0"/>
                <TextBox x:Name="txtCoding" TextWrapping="Wrap" Text="TextBox" Grid.Row="1" Grid.Column="1" Margin="4,0,0,0"/>
            </Grid>
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="cbpaths" Content="paths" Checked="cbSearch_CheckedChanged" Unchecked="cbSearch_CheckedChanged"/>
                <CheckBox x:Name="cbfiles" Content="files" Checked="cbSearch_CheckedChanged" Unchecked="cbSearch_CheckedChanged"/>
                <CheckBox x:Name="cbnexts" Content="nexts" Checked="cbSearch_CheckedChanged" Unchecked="cbSearch_CheckedChanged"/>
            </StackPanel>
        </StackPanel>
        <TabControl x:Name="tabControl" TabStripPlacement="Left">
            <TabItem Header="paths" x:Name="tipaths">
                <local:SearchConfigs x:Name="scpaths" />
            </TabItem>
            <TabItem Header="files" x:Name="tifiles">
                <local:SearchConfigs x:Name="scfiles" />
            </TabItem>
            <TabItem Header="nexts" x:Name="tinexts">
                <local:SearchConfigs x:Name="scnexts" IsNavgateSearchConfig="True" />
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
